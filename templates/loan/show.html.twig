{% extends 'base.html.twig' %}

{% block title %}Loan{% endblock %}

{% block body %}
    <h1>Loan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>LoanDate</th>
                <td>{{ loan.loanDate ? loan.loanDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LoanBackDate</th>
                <td>{{ loan.loanBackDate ? loan.loanBackDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfBooksAllowed</th>
                <td>{{ loan.numberOfBooksAllowed ? loan.numberOfBooksAllowed|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LateFees</th>
                <td>{{ loan.lateFees }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('loan_index') }}">back to list</a>

    <a href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>

