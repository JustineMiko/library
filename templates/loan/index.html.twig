{% extends 'base.html.twig' %}

{% block title %}Loan index{% endblock %}

{% block body %}
    <h1>Loan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LoanDate</th>
                <th>LoanBackDate</th>
                <th>NumberOfBooksAllowed</th>
                <th>LateFees</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td>{{ loan.id }}</td>
                <td>{{ loan.loanDate ? loan.loanDate|date('Y-m-d') : '' }}</td>
                <td>{{ loan.loanBackDate ? loan.loanBackDate|date('Y-m-d') : '' }}</td>
                <td>{{ loan.numberOfBooksAllowed ? loan.numberOfBooksAllowed|date('Y-m-d') : '' }}</td>
                <td>{{ loan.lateFees }}</td>
                <td>
                    <a href="{{ path('loan_show', {'id': loan.id}) }}">show</a>
                    <a href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('loan_new') }}">Create new</a>
{% endblock %}
