{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BookTitle</th>
                <th>BookCategory</th>
                <th>Author</th>
                <th>EditionYear</th>
                <th>Pages</th>
                <th>Editor</th>
                <th>BookIsbn</th>
                <th>BookCondition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.bookTitle }}</td>
                <td>{{ book.bookCategory }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.editionYear ? book.editionYear|date('Y-m-d') : '' }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.editor }}</td>
                <td>{{ book.bookIsbn }}</td>
                <td>{{ book.bookCondition }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
