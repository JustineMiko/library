{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>BookTitle</th>
                <td>{{ book.bookTitle }}</td>
            </tr>
            <tr>
                <th>BookCategory</th>
                <td>{{ book.bookCategory }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>EditionYear</th>
                <td>{{ book.editionYear ? book.editionYear|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ book.pages }}</td>
            </tr>
            <tr>
                <th>Editor</th>
                <td>{{ book.editor }}</td>
            </tr>
            <tr>
                <th>BookIsbn</th>
                <td>{{ book.bookIsbn }}</td>
            </tr>
            <tr>
                <th>BookCondition</th>
                <td>{{ book.bookCondition }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
